generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Beer {
  id          String   @id @default(cuid())
  name        String
  brewery     String
  style       String
  abv         Float
  ibu         Int?
  description String?
  imageUrl    String?
  position    Int      @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([position])
}
