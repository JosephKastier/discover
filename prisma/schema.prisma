generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Beer {
  id          String      @id @default(cuid())
  name        String
  brewery     String
  style       String
  abv         Float
  ibu         Int?
  description String?
  imageUrl    String?
  position    Int         @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  beerTests   BeerTest[]

  @@index([position])
}

model BeerTest {
  id        String   @id @default(cuid())
  title     String
  text      String
  link      String?
  beerId    String
  beer      Beer     @relation(fields: [beerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([beerId])
}
